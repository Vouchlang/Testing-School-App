<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#1F42FF"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/usea"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/khmer_os_muol_light"
        android:text="សាកលវិទ្យាល័យ សៅស៍អ៊ីសថ៍អេយសៀ"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="university of south-east asia"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Welcome to USEA app!"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Sign in as:"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGuest"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Guest"
        android:textStyle="bold"
        android:backgroundTint="#FAC402"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btnStudent"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textStyle="bold"
        android:backgroundTint="#FAC402"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USEA 2022 V1.0"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        />

</LinearLayout>