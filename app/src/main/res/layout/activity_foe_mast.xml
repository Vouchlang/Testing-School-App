<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".program.program_faculty.foe.foe_mast.FoE_Mast">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/program_img"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            >
            <Button
                android:id="@+id/btnFoE_Mast_IE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="International Economic"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_FB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finance and Banking"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_Man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Management"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_Acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accounting"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_TH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tourism and Hospitality"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_Aud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auditing"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_IB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="International Business"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_IM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="International Marketing"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
            <Button
                android:id="@+id/btnFoE_Mast_ITM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="International Tourism Management"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FFC107"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>